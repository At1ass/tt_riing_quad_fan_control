Checks: >
  -*,                            # Сначала отключаем все проверки
  readability-identifier-naming  # Включаем проверку именования

CheckOptions:
  - key: readability-identifier-naming.ClassCase
    value: CamelCase            # Имена классов должны быть CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack            # Или lowerCamelCase (тоже вариант)
  - key: readability-identifier-naming.MemberCase
    value: lowerCamelCase
  - key: readability-identifier-naming.VariableCase
    value: lower_snake_case
  - key: readability-identifier-naming.ParameterCase
    value: lowerCamelCase
  - key: readability-identifier-naming.NamespaceCase
    value: PascalCase
  - key: readability-identifier-naming.ClassMemberSuffix
    value: _  # Напр. поля класса заканчиваются на '_'
  # и т.д.

WarningsAsErrors: ''
HeaderFilterRegex: '.*'
